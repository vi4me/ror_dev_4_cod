<h1>My Profile</h1>
<%= image_tag @user.avatar_url, style: 'height: 250px;' if @user.avatar %>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label 'Are you doctor?' %>
    <%= f.check_box :doctor %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-default' %>
<% end %>
<%= link_to 'Back', root_path %>
